<div class = "login_page">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class = "login_navbar">
    <%= link_to unauthenticated_root_path do %>
      <%= fa_icon 'arrow-left', class: 'fa-solid', style: 'color: #ffffff;' %>
    <% end %>
    <h2>LOGIN</h2>
     <%= f.submit "Log in", class: "login_link" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder:"Email", autocomplete: "email", class: "new_sign_in_info" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password",placeholder:"Password", class: "new_sign_in_info" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  
  <% end %>

  <%= render "devise/shared/links" %>

</div>

