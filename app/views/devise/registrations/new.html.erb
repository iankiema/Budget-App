<div class = "sign_up_page">
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class = "sign_up_navbar">
      <%= link_to unauthenticated_root_path do %>
        <%= fa_icon 'arrow-left', class: 'fa-solid', style: 'color: #ffffff;' %>
      <% end %>
      <h2>Register</h2>
      <%= f.submit "Sign up", class:"signup_link" %>
    </div>

    <div class="field">
      <%= f.text_field :full_name, placeholder: "Full name", autofocus: true, class: "new_sign_up_info" %>
    </div>

    <div class="field">
      <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email", class: "new_sign_up_info" %>
    </div>

    <div class="field">
      <%= f.password_field :password, placeholder: "Password", autocomplete: "new-password", class: "new_sign_up_info" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation,placeholder: "Password confirmation", autocomplete: "new-password", class: "new_sign_up_info" %>
    </div>
  
  <% end %>
</div>



